                            "--disable-doc",
                            "--disable-ffplay",
                            "--enable-gpl",
                            "--enable-libass",
                            "--enable-libfribidi",
                            "--enable-libmp3lame",
                            "--enable-libpulse",
                            "--enable-libtheora",
                            "--enable-libvorbis",
                            "--enable-libvpx",
                            "--enable-libx264",
                            "--enable-libx265",
                            "--enable-libxvid",
                            "--enable-version3"
                        ]
                    },
                    "arm": {
                        "config-opts": [
                            "--enable-shared",
                            "--disable-static",
                            "--disable-debug",
                            "--enable-gnutls",
                            "--disable-doc",
                            "--disable-ffplay",
                            "--enable-gpl",
                            "--enable-libass",
                            "--enable-libfribidi",
                            "--enable-libmp3lame",
                            "--enable-libpulse",
                            "--enable-libtheora",
                            "--enable-libvorbis",
                            "--enable-libvpx",
                            "--enable-libx264",
                            "--enable-libx265",
                            "--enable-libxvid",
                            "--enable-version3"
                        ]
                    },
                    "i386": {
                        "config-opts": [
                            "--enable-shared",
                            "--disable-static",
                            "--disable-debug",
                            "--enable-gnutls",
                            "--disable-doc",
                            "--disable-ffplay",
                            "--enable-gpl",
                            "--enable-libass",
                            "--enable-libfribidi",
                            "--enable-libmp3lame",
                            "--enable-libpulse",
                            "--enable-libtheora",
                            "--enable-libvorbis",
                            "--enable-libvpx",
                            "--enable-libx264",
                            "--enable-libx265",
                            "--enable-libxvid",
                            "--enable-nvdec",
                            "--enable-version3"
                        ]
                    },
                    "x86_64": {
                        "config-opts": [
                            "--enable-shared",
                            "--disable-static",
                            "--disable-debug",
                            "--enable-gnutls",
                            "--disable-doc",
                            "--disable-ffplay",
                            "--enable-gpl",
                            "--enable-libass",
                            "--enable-libfribidi",
                            "--enable-libmp3lame",
                            "--enable-libpulse",
                            "--enable-libtheora",
                            "--enable-libvorbis",
                            "--enable-libvpx",
                            "--enable-libx264",
                            "--enable-libx265",
                            "--enable-libxvid",
                            "--enable-nvdec",
                            "--enable-version3"
                        ]
                    }
                }
            },
            "sources": [{
                "type": "archive",
                "url": "https://ffmpeg.org/releases/ffmpeg-5.0.1.tar.xz",
                "sha256": "ef2efae259ce80a240de48ec85ecb062cecca26e4352ffb3fda562c21a93007b"
            }],     
            "modules": [{
                "name": "ffnvcodec",
                "only-arches": ["i386", "x86_64"],
                "buildsystem": "simple",
                "build-commands": [
                    "make",
                    "make install PREFIX=${FLATPAK_DEST}"
                ],
                "sources": [{
                    "type": "git",
                    "url": "https://git.videolan.org/git/ffmpeg/nv-codec-headers.git"
                }]
            },
            {
                "name": "xvid",
                "subdir": "build/generic",
                "sources": [{
                    "type": "archive",
                    "url": "https://downloads.xvid.com/downloads/xvidcore-1.3.7.tar.gz",
                    "sha256": "abbdcbd39555691dd1c9b4d08f0a031376a3b211652c0d8b3b8aa9be1303ce2d"
                }]
            },
            {
                "name": "libvpx",
                "config-opts": [
                    "--enable-runtime-cpu-detect",
                    "--enable-shared",
                    "--disable-static",
                    "--enable-pic",
                    "--disable-install-bins",
                    "--disable-install-docs",
                    "--disable-install-srcs",
                    "--enable-vp8",
                    "--enable-postproc",
                    "--enable-vp9",
                    "--enable-vp9-highbitdepth"
                ],
                "sources": [{
                    "type": "archive",
                    "url": "https://github.com/webmproject/libvpx/archive/refs/tags/v1.11.0.tar.gz",
                    "sha256": "965e51c91ad9851e2337aebcc0f517440c637c506f3a03948062e3d5ea129a83"
                }]
            },
            {
                "name": "x264",
                "build-options": {
                    "arch": {
                        "aarch64": {
                            "cxxflags": "-fPIC",
                            "config-opts": [
                                "--prefix=${FLATPAK_DEST}",
                                "--enable-shared",
                                "--disable-cli",
                                "--disable-lavf",
                                "--enable-pic",
                                "--disable-lto"
                            ]
                        },
                        "arm": {
                            "cxxflags": "-fPIC",
                            "config-opts": [
                                "--prefix=${FLATPAK_DEST}",
                                "--enable-shared",
                                "--disable-cli",
                                "--disable-lavf",
                                "--enable-pic",
                                "--disable-lto",
                                "--disable-asm"
                            ]
                        },
                        "i386": {
                            "config-opts": [
                                "--prefix=${FLATPAK_DEST}",
                                "--enable-shared",
                                "--disable-cli",
                                "--disable-lavf",
                                "--enable-pic",
                                "--disable-asm"
                            ]
                        },
                        "x86_64": {
                            "config-opts": [
                                "--prefix=${FLATPAK_DEST}",
                                "--enable-shared",
                                "--disable-cli",
                                "--disable-lavf",
                                "--enable-pic",
                                "--disable-asm"
                            ]
                        }
                    }
                },
                "post-install": [
                    "ln -srf ${FLATPAK_DEST}/lib/libx264.so.* ${FLATPAK_DEST}/lib/libx264.so"
                ],
                "sources": [{
                    "type": "git",
                    "commit": "1771b556ee45207f8711744ccbd5d42a3949b14c",
                    "url": "https://git.videolan.org/git/x264.git"
                }]
            },
            {
                "name": "x265_32",
                "only-arches": ["i386"],
                "buildsystem": "simple",
                "build-options": {
                    "arch": {
                        "arm": {
                            "cxxflags": "-fPIC"
                        },
                        "aarch64": {
                            "cxxflags": "-fPIC"
                        }
                    }
                },
                "build-commands": [ 
                    "mkdir source/build-8 source/build-10 source/build-12",
                    "cd source/build-12 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DENABLE_ASSEMBLY='FALSE' -DHIGH_BIT_DEPTH='TRUE' -DMAIN12='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-12 && make",
                    "cd source/build-10 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DENABLE_ASSEMBLY='FALSE' -DHIGH_BIT_DEPTH='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-10 && make",
                    "ln -s ../build-10/libx265.a source/build-8/libx265_main10.a",
                    "ln -s ../build-12/libx265.a source/build-8/libx265_main12.a",
                    "cd source/build-8 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DENABLE_ASSEMBLY='FALSE' -DENABLE_SHARED='TRUE' -DENABLE_CLI='FALSE' -DENABLE_HDR10_PLUS='TRUE' -DEXTRA_LIB='x265_main10.a;x265_main12.a' -DEXTRA_LINK_FLAGS='-L.' -DLINKED_10BIT='TRUE' -DLINKED_12BIT='TRUE'",
                    "cd source/build-8 && make",
                    "cd source/build-8 && make install"
                ],
                "sources": [{
                    "type": "archive",
                    "url": "https://bitbucket.org/multicoreware/x265_git/downloads/x265_3.3.tar.gz",
                    "sha256": "c6d744a87eda55560da715f56f878640554ddc06e2d0fcbd822fa330affc22cc"
                }]
            },
            {
                "name": "x265_64",
                "skip-arches": ["i386"],
                "buildsystem": "simple",
                "build-options": {
                    "arch": {
                        "arm": {
                            "cxxflags": "-fPIC"
                        },
                        "aarch64": {
                            "cxxflags": "-fPIC"
                        }
                    }
                },
                "build-commands": [
                    "mkdir source/build-8 source/build-10 source/build-12",
                    "cd source/build-12 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DHIGH_BIT_DEPTH='TRUE' -DMAIN12='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-12 && make",
                    "cd source/build-10 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DHIGH_BIT_DEPTH='TRUE' -DEXPORT_C_API='FALSE' -DENABLE_CLI='FALSE' -DENABLE_SHARED='FALSE'",
                    "cd source/build-10 && make",
                    "ln -s ../build-10/libx265.a source/build-8/libx265_main10.a",
                    "ln -s ../build-12/libx265.a source/build-8/libx265_main12.a",
                    "cd source/build-8 && cmake .. -DCMAKE_INSTALL_PREFIX=${FLATPAK_DEST} -DENABLE_SHARED='TRUE' -DENABLE_CLI='FALSE' -DENABLE_HDR10_PLUS='TRUE' -DEXTRA_LIB='x265_main10.a;x265_main12.a' -DEXTRA_LINK_FLAGS='-L.' -DLINKED_10BIT='TRUE' -DLINKED_12BIT='TRUE'",
                    "cd source/build-8 && make",
                    "cd source/build-8 && make install"
                ],
                "sources": [{
                    "type": "archive",
                    "url": "https://bitbucket.org/multicoreware/x265_git/downloads/x265_3.3.tar.gz",
                    "sha256": "c6d744a87eda55560da715f56f878640554ddc06e2d0fcbd822fa330affc22cc"
