                    "sha256": "7812b4f0cf66acda0d0fe4302545339517e702af7674dd04e5fe22a5ade16a90"
                }]
            },
            {
                "name": "lame",
                "cleanup": ["/share/doc"],
                "config-opts": [
                    "--enable-shared",
                    "--disable-static",
                    "--disable-frontend",
                    "--enable-nasm"
                ],
                "sources": [{
                    "type": "archive",
